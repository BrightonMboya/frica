---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Gilber Joseph">

    <main class="flex flex-col items-center justify-center bg-gray-100 container">
        <section class="mt-5">
            <div class="flex items-center justify-center mt-5">

                <div class="flex items-center gap-5">
                    <h3 class="text-xl font-medium tracking-wide">Gilbert Mosha</h3>
    
                    <div class="w-[90px] h-[90px] rounded-full">
                        <img src="https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=880&q=80.jpg" alt="profile" class="object-cover rounded-full"/>
                    </div>
            </div>
            </div>


            <div class="flex items-center justify-between bg-white w-screen px-5 rounded-xl mt-[2rem] py-3">
                <h3 class="text-xl font-medium">Contact Us</h3>

                <div class="w-[30px] h-[30px]">
                 <img src="/ig.png" class="object-cover"/>
                </div>
                 <div class="w-[35px] h-[35px]">
                 <img src="/whatsapp.png" class="object-cover"/>
                </div>
                <div class="w-[30px] h-[30px]">
                 <img src="/gmail.png" class="object-cover"/>
                </div>
            </div>
        </section>

        <!-- Products section -->
        <section>
            <div class="grid grid-cols-1 space-y-5 mt-5">
                
                <div class="w-[180px] h-[220px] ">
                    <img src="https://images.unsplash.com/photo-1509395286499-2d94a9e0c814?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=880&q=80.jpg" alt="Product" class="object-contain rounded-md" width="200"/>
                    <h3 class="text-center mt-3 text-lg tracking-wide">Iphones</h3>
                </div>
                <div class="w-[180px] h-[220px] ">
                    <img src="https://images.unsplash.com/photo-1509395286499-2d94a9e0c814?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=880&q=80.jpg" alt="Product" class="object-contain rounded-md" width="200"/>
                    <h3 class="text-center mt-3 text-lg tracking-wide">Phone Covers</h3>
                </div>
                <div class="w-[180px] h-[220px] ">
                    <img src="https://images.unsplash.com/photo-1509395286499-2d94a9e0c814?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=880&q=80.jpg" alt="Product" class="object-contain rounded-md" width="200"/>
                    <h3 class="text-center mt-3 text-lg tracking-wide">Gadgets</h3>
                </div>
                <div class="w-[180px] h-[220px] ">
                    <img src="https://images.unsplash.com/photo-1509395286499-2d94a9e0c814?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=880&q=80.jpg" alt="Product" class="object-contain rounded-md" width="200"/>
                    <h3 class="text-center mt-3 text-lg tracking-wide">Headsets</h3>
                </div>
               
            </div>
        </section>

        <!-- Footer -->

        <section class="bg-white py-3 mt-[3rem] w-full flex items-center gap-5">

            
                <div class="w-[90px] h-[90px] rounded-full">
                    <img src="https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=880&q=80.jpg" alt="profile" class="object-cover rounded-full"/>
                </div>

                <div>
                    <h3>Tupo RockCity Mall, 1st Floor, Mwanza Tanzania</h3>
                    <p class="italic tracking-wide">Karibu Tukuhudumie</p>
                </div>
           

        </section>
    </main>
</Layout>