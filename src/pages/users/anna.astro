---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Anna Charles">
  <main
    class="flex flex-col items-center justify-center bg-[#f2f2f2] container"
  >
    <section class="mt-5">
      <div>
        <img src="/images/benapo_logo.png" alt="logo" class="w-[200px]" />
      </div>
      <div class="flex items-center justify-center mt-5">
        <div class="flex items-center gap-5 translate-x-[28px]">
          <div class="relative">
            <h3
              class="text-xl tracking-wide font-medium uppercase absolute top-0 w-[200px]"
            >
              Anna Charles
            </h3>
            <p class="text-xs mt-1 absolute top-6 w-[200px]">
              Managing Director
            </p>
          </div>
        </div>

        <div class="relative">
          <img
            src="/images/benapo.png"
            alt="profile"
            class="object-cover w-[350px] h-[209px] translate-y-[2rem]"
          />
        </div>
      </div>

      <div class="flex bg-[#304d44] px-5 rounded-sm py-3 shadow-lg w-screen">
        <h3 class="text-xl font-light translate-x-[28px] text-white">
          Contacts
        </h3>
        <div
          class="flex items-center justify-between translate-x-[4.5rem] gap-5"
        >
          <a href="tel:+255742600160">
            <div class="w-[30px] h-[30px]">
              <img src="/phone.png" class="object-cover" />
            </div>
          </a>

          <a href="https://instagram.com/benapo_insurance?igshid=NTdlMDg3MTY=">
            <div class="w-[30px] h-[30px]">
              <img src="/ig.png" class="object-cover" />
            </div>
          </a>
          <a href="https://wa.me/+255742600160">
            <div class="w-[35px] h-[35px]">
              <img src="/whatsapp.png" class="object-cover" />
            </div>
          </a>
          <a href="mailto:info@benapo.co.tz">
            <div class="w-[30px] h-[30px]">
              <img src="/gmail.png" class="object-cover" />
            </div>
          </a>
        </div>
      </div>

      <a class="flex justify-center" href="/vcards/benjamin.vcf" download>
        <button
          class="px-3 py-2 rounded-md cursor-pointer bg-[#304d44] shadow-xl mt-5 text-white"
          >Save Contacts</button
        >
      </a>
    </section>

    <!-- Products section -->
    <section>
      <h3 class="uppercase text-center mt-5 font-light tracking-wide text-xl">
        our Services
      </h3>
      <p class="text-center">
        We do General Supplies & provide General Insurance Services
      </p>
      <div class="flex items-center flex-col mt-5 space-y-5">
        <a href="">
          <div
            class="w-[300px] h-[150px] bg-[#304d44] rounded-md flex flex-col items-center shadow-md"
          >
            <img
              src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSCh1kde9X76SUgSMBzrcRexnLcB2Xlyc2hsg&usqp=CAU"
              alt="Product"
              class="object-cover rounded-md w-[300px] h-[120px] aspect-square"
              width="200"
            />
            <div>
              <h3 class="text-center mt-1 text-[1rem] text-white">
                Car Insurance
              </h3>
            </div>
          </div>
        </a>

        <a href="">
          <div
            class="w-[300px] h-[150px] bg-[#304d44] rounded-md flex flex-col items-center shadow-md"
          >
            <img
              src="https://www.thebalancemoney.com/thmb/2K0J1uZWeGfIFgSQMNxEnb6vu2w=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/GettyImages-1158539303-44fd153495d24875ab15f1e8e1816bc6.jpg"
              alt="Product"
              class="object-cover rounded-md w-[300px] h-[120px] aspect-square"
              width="200"
            />
            <div>
              <h3 class="text-center mt-1 text-[1rem] text-white">
                Personal Insurance
              </h3>
            </div>
          </div>
        </a>

        <a href="">
          <div
            class="w-[300px] h-[150px] bg-[#304d44] rounded-md flex flex-col items-center shadow-md"
          >
            <img
              src="https://www.qian.co.in/blog/wp-content/uploads/2022/01/What-are-the-Coverages-in-a-Fire-Insurance-Policy.png"
              alt="Product"
              class="object-cover rounded-md w-[300px] h-[120px] aspect-square"
              width="200"
            />
            <div>
              <h3 class="text-center mt-1 text-[1rem] text-white">
                Fire Insurance
              </h3>
            </div>
          </div>
        </a>

        <a href="">
          <div
            class="w-[300px] h-[150px] bg-[#304d44] rounded-md flex flex-col items-center shadow-md"
          >
            <img
              src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRTKNcbcXYKGL_viYln-QU5mtVtDgFAwYO0udscLSbxw295eW5DhihbUI-B2tR5MGLsR8o&usqp=CAU"
              alt="Product"
              class="object-cover rounded-md w-[300px] h-[120px] aspect-square"
              width="200"
            />
            <div>
              <h3 class="text-center mt-1 text-[1rem] text-white">
                Risks and Bonds
              </h3>
            </div>
          </div>
        </a>
      </div>
    </section>

    <!-- Footer -->

    <section
      class="bg-[#304d44] py-3 mt-[3rem] w-full flex items-center gap-3 pl-5"
    >
      <div class="bg-[#E4E2D9] rounded-full">
        <img
          class="w-[100px] h-[100px] rounded-full object-cover"
          src="/images/benapo.png"
          alt="Rounded avatar"
        />
      </div>

      <div class="w-[250px] text-white">
        <h3>Rockcity Mall, 2nd Floor</h3>
        <p class="">Mwanza, Tanzania</p>
      </div>
    </section>

    <footer class="flex justify-between">
      <div class="w-[300px]"></div>

      <img src="/logo.png" alt="logo" class="w-[150px]" width="150" />
    </footer>
  </main>
</Layout>
