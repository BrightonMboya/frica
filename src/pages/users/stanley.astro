      </div>
    </section>

    <!-- Footer -->

    <section
      class="bg-[#083762] py-3 mt-[3rem] w-full flex items-center gap-3 pl-5"
    >
      <div class="bg-[#E4E2D9] rounded-full overflow-hidden">
        <img
          class="w-[120px] h-[120px] rounded-full object-cover"
          src="/images/stanley.png"
          alt="Rounded avatar"
        />
      </div>

      <div class="w-[250px] text-white pl-5">
        <h3>Haidery Plaze</h3>
        <p>India St Kisutu</p>
        <p class="">Dar es Salaam, Tanzania</p>
        <!-- <p class="italic tracking-wide mt-3">Karibu Tukuhudumie</p> -->
