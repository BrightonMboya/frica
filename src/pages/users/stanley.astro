---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Stanley Joseph">
  <main
    class="flex flex-col items-center justify-center bg-[#E4E2D9] container overflow-hidden"
  >
    <section class="mt-5">
      <div>
        <img src="/images/stanley-logo.png" alt="logo" class="w-[250px]" />
      </div>
      <div class="flex items-start justify-center mt-5">
        <div class="flex items-center gap-5 translate-x-[3rem] w-[390px]">
          <div class="">
            <h3 class="text-xl tracking-wide font-medium uppercase">
              Stanley Joseph
            </h3>
            <p class="uppercase text-[10px]">
              Managing Partner - Sustainability
            </p>
          </div>
        </div>

        <div class="relative">
          <img
            src="/images/stanley.png"
            alt="profile"
            class="object-cover w-[317px] h-full"
          />
        </div>
      </div>

      <div class="flex bg-[#083762] px-5 rounded-sm py-3 shadow-lg">
        <h3 class="text-xl font-light translate-x-[28px] text-white">
          Contacts
        </h3>
        <div
          class="flex items-center justify-between translate-x-[4.5rem] gap-5"
        >
          <a href="tel:+255755369607">
            <div class="w-[30px] h-[30px]">
              <img src="/phone.png" class="object-cover" />
            </div>
          </a>

          <a
            href="https://twitter.com/impactenconsult?s=21&t=ZJG_TwXCgmncgtf7DYsQWA"
          >
            <div class="w-[30px] h-[30px]">
              <img src="/twitter.png" class="object-cover" />
            </div>
          </a>
          <a href="https://wa.me/+255755369607">
            <div class="w-[35px] h-[35px]">
              <img src="/whatsapp.png" class="object-cover" />
            </div>
          </a>

          <a href="mailto:mailto:stanley@impactenconsulting.com">
            <div class="w-[30px] h-[30px]">
              <img src="/gmail.png" class="object-cover" />
            </div>
          </a>
        </div>
      </div>

      <a class="flex justify-center" href="/vcards/Stanley.vcf" download>
        <button
          class="px-3 py-2 rounded-md cursor-pointer bg-[#083762] shadow-xl mt-5 text-white"
          >Save Contacts</button
        >
      </a>
    </section>

    <!-- Products section -->
    <section>
      <h3 class="uppercase text-center mt-5 font-light tracking-wide text-xl">
        our Services
      </h3>
      <div class="flex items-center flex-col mt-5 space-y-5">
        <a
          href="https://api.whatsapp.com/send?phone=+255755369607&text=Hello%20Mr%20Stanley%2C%20lets%20talk%20more%20about%20Corporate%20Sustainability-ESG"
        >
          <div
            class="w-[300px] h-[120px] bg-[#083762] p-3 rounded-md flex space-x-5 items-center shadow-md"
          >
            <img
              src="/images/stanley/corporate.jpeg"
              alt="Product"
              class="object-cover rounded-md h-[100px] w-[120px] aspect-square"
              width="200"
            />
            <div>
              <h3 class="text-center mt-1 text-[1rem] text-white">
                Corporate Sustainability
              </h3>
            </div>
          </div>
        </a>

        <a
          href="https://api.whatsapp.com/send?phone=+255755369607&text=Hello%20Mr%20Stanley%2C%20lets%20talk%20more%20about%20Social%20Transition%20and%20Closure"
        >
          <div
            class="w-[300px] h-[120px] bg-[#083762] p-3 rounded-md flex space-x-5 items-center shadow-md"
          >
            <img
              src="/images/stanley/social.jpeg"
              alt="Product"
              class="object-cover rounded-md h-[100px] w-[120px] aspect-square"
              width="200"
            />
            <div>
              <h3 class="text-center mt-1 text-[1rem] text-white">
                Social Transition and Closure
              </h3>
            </div>
          </div>
        </a>

        <a
          href="https://api.whatsapp.com/send?phone=+255755369607&text=Hello%20Mr%20Stanley%2C%20lets%20talk%20more%20about%20Operational%20Performance"
        >
          <div
            class="w-[300px] h-[120px] bg-[#083762] p-3 rounded-md flex space-x-5 items-center shadow-md"
          >
            <img
              src="/images/stanley/operational.jpeg"
              alt="Product"
              class="object-cover rounded-md h-[100px] w-[120px]"
              width="200"
            />
            <div>
              <h3 class="text-center mt-1 text-[1rem] text-white">
                Operational Perfomance
